<h1>The Burger Place</h1>

<div>
	<div style="width:50%;float:left">
		<h3>On The Table</h3>
		<ul>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
					</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div style="width:50%;float:right">
		<h3>Devoured</h3>
		<ul>
			{{#each burgers}}
				{{#if this.devoured}}
					<li>
						{{this.burger_name}}
					</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>
<div style="position:absolute;bottom:25px;text-align:center">
	<form action="burgers/create" method="POST">
		<label>Burger Name</label>
		<input type="text" name="burger_name">
		<button type="submit">Add a burger to devour!</button>
	</form>
</div>
	